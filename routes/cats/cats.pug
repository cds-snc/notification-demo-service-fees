block content

  h1 #{title}

  div
    p #{__('cats.info')}
  
  form.cra-form(method='post')
  
    +textInput('form.fullname', null, 'form.fullname.desc')(class='w-3-4', id='firstname' name='firstname', autofocus, value=data.firstname)

    input(name='name', type='hidden', value=name)

    +formButtons()
